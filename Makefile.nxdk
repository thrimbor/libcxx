SRCS += \
	$(wildcard $(NXDK_DIR)/lib/libcxx/src/*.cpp) \
	$(NXDK_DIR)/lib/libcxx/src/support/win32/locale_win32.cpp \
	$(NXDK_DIR)/lib/libcxx/src/support/win32/support.cpp
NXDK_CFLAGS += -I$(NXDK_DIR)/lib/libcxx/include -D_LIBCPP_NO_EXCEPTIONS -D_LIBCPP_DISABLE_VISIBILITY_ANNOTATIONS -D_LIBCPP_HAS_NO_THREADS -D_LIBCPP_BUILDING_LIBRARY \
-D_LIBCPP_HAS_NO_STDIN -D_LIBCPP_HAS_NO_STDOUT \
-D_LIBCPP_HAS_NO_BUILTIN_OVERLOADED_OPERATOR_NEW_DELETE -D_LIBCPP_HAS_NO_BUILTIN_OPERATOR_NEW_DELETE -D_LIBCPP_COMPILER_HAS_BUILTIN_LAUNDER -D_LIBCPP_NO_AUTO_LINK

